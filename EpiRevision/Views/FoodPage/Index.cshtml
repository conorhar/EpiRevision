@model FoodPageViewModel
    
<div class="pt-table">
    <div class="pt-tablecell page-quotes relative">
        <!-- .close -->
        <a href="../" class="page-close"><i class="tf-ion-close"></i></a>
        <!-- /.close -->

        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-md-offset-1 col-md-10 col-lg-offset-2 col-lg-8">
                    <div class="page-title text-center">
                        <h2>
                            @Html.PropertyFor(x => x.CurrentPage.FirstFrontHeader)
                            <span class="primary">@Html.PropertyFor(x => x.CurrentPage.SecondFrontHeader)</span>
                            <span class="title-bg">@Html.PropertyFor(x => x.CurrentPage.ShadowHeader)</span>
                        </h2>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-xs-12">
                    <div class="testimonials">

                        @if (Model.Food != null)
                        {
                            foreach (var dish in Model.Food)
                            {
                                <div class="item clear">
                                    <figure class="thumb">
                                        <div class="tm-hex" style="background-image: url('@Url.ContentUrl(dish.Image)');">
                                            <div class="hexTop"></div>
                                            <div class="hexBottom"></div>
                                        </div>
                                        <figcaption>
                                            <h4>@dish.DishName</h4>
                                        </figcaption>
                                    </figure>
                                    <div class="text">
                                        <p>@dish.Preamble</p>
                                    </div>
                                </div>
                            }
                        }

                    </div>
                </div>
            </div>
        </div>

        <nav class="page-nav clear">
            <div class="container">
                <div class="flex flex-middle space-between">
                    <span class="copyright hidden-xs">Copyright © 2021, Designed &amp; Developed by <a href="https://themefisher.com/">Themefisher</a>.</span>
                </div>
            </div>
        </nav>

    </div>
</div>